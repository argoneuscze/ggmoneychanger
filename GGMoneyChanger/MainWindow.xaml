<Window x:Class="GGMoneyChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GGMoneyChanger"
        mc:Ignorable="d"
        Title="GGXrdRev2 Money Changer" Height="110" Width="250">
    <StackPanel Margin="10">
        <TextBox Name="MoneyValue" PreviewTextInput="NumberValidationTextBox"></TextBox>
        <Button Click="ButtonBase_OnClick">
            <Button.Content>Apply</Button.Content>
        </Button>
    </StackPanel>
</Window>
