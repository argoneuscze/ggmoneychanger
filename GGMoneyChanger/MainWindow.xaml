<Window x:Class="GGMoneyChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GGMoneyChanger"
        mc:Ignorable="d"
        Title="GGXrdRev2 MoneyChanger v0.1" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
        <Label Padding="0,0,4,0">Money</Label>
        <TextBox Width="150" Height="20" Name="MoneyValue" PreviewTextInput="NumberValidationTextBox"></TextBox>
        <Button Margin="10,0,0,0" Click="ButtonBase_OnClick" Height="20" Padding="4,0,4,0">
            <Button.Content>Apply</Button.Content>
        </Button>
    </StackPanel>
</Window>
